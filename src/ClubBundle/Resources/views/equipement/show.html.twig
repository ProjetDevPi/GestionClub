{% extends 'back.html.twig' %}

{% block container %}
    <h1>Equipement</h1>

    <table class="table table-striped table-bordered nowrap dataTable">
        <tbody>
            <tr>
                <th>Id Equipement</th>
                <td>{{ equipement.ideq }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipement.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ equipement.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipement_index') }}"class="btn btn-inline">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('equipement_edit', { 'ideq': equipement.ideq }) }}"class="btn btn-out-dashed btn-success">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
