{% extends 'back.html.twig' %}

{% block container %}
    <h1>Clubs list</h1>

    <table class="table table-striped table-bordered nowrap dataTable">
        <thead>
            <tr>
                <th>Id du club</th>
                <th>Nom du club</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('club_show', { 'idclub': club.idclub }) }}">{{ club.idclub }}</a></td>
                <td>{{ club.nomclub }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('club_show', { 'idclub': club.idclub }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('club_edit', { 'idclub': club.idclub }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('club_new') }}">Create a new club</a>
        </li>
    </ul>
{% endblock %}
