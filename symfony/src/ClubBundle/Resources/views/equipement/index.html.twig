{% extends 'back.html.twig' %}

{% block container %}
    <h1>Liste des equipement</h1>
    <a href="{{ path('equipement_pdf')}}" class="btn btn-out-dashed btn-success">pdf</a>

    <table class="table table-striped table-bordered nowrap dataTable">
        <thead>
            <tr>
                <th>Id Equipement</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td><a href="{{ path('equipement_show', { 'ideq': equipement.ideq }) }}">{{ equipement.ideq }}</a></td>
                <td>{{ equipement.nom }}</td>
                <td>{{ equipement.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipement_show', { 'ideq': equipement.ideq }) }}"class="btn btn-out-dashed btn-dark">Show</a>
                        </li>
                        <li>
                            <a href="{{ path('equipement_edit', { 'ideq': equipement.ideq }) }}"class="btn btn-out-dashed btn-success">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center" style="margin-top: 20px; margin-bottom:40px ;text-align: center; margin-left: 44%">
    </div>
    <br><br>
    <div class="navigation text-center" align="center">
        {{ knp_pagination_render(equipements) }}
    </div>
    <ul>
        <li>
            <a href="{{ path('equipement_new') }}">Create a new equipement</a>
        </li>
    </ul>
{% endblock %}
