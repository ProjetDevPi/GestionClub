{% extends 'back.html.twig' %}

{% block container %}
    <h1>Club</h1>

    <table class="table table-striped table-bordered nowrap dataTable">
        <tbody>
            <tr>
                <th>Id du club</th>
                <td>{{ club.idclub }}</td>
            </tr>
            <tr>
                <th>Nom du club</th>
                <td>{{ club.nomclub }}</td>
            </tr>
            <tr>
                <th>capacite de membre</th>
                <td>{{ club.cap }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('club_index') }}" class="btn btn-inline" >Back to the list</a>
        </li>
        <li>
            <a href="{{ path('club_edit', { 'idclub': club.idclub }) }}"class="btn btn-out-dashed btn-success">Edit</a>
        </li>

        <li>
            <a href="{{ path('delete', { 'idclub': club.idclub }) }}"class="btn btn-out-dashed btn-danger">Delete</a>
        </li>
    </ul>
{% endblock %}
